{
  "manifest_version": 3,
  "name": "Media Link Saver",
  "version": "1.2.0",
  "description": "Finds photos and videos on any page and lets you save them with one click.",
  "permissions": ["activeTab", "scripting", "downloads", "storage", "contextMenus"],
"options_ui": { "page": "options/options.html" },
  "action": {
  "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
